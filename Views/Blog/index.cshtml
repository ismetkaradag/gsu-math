@model List<gsu_math.Models.Blog>
@{
    Layout = "_Layout2";
    ViewData["Title"]="Blog";
}
<a class="btn btn-primary rounded m-5" asp-controller="Blog" asp-action="Create" style="margin-top:90px !important;color:black;">Blog yaz</a>
<section class="section" id="blog">
        <!-- container -->
        <div class="container text-center">
            <p class="section-subtitle">Son Paylaşılanlar</p>
            <h6 class="section-title mb-6">Blog</h6>
            <!-- blog-wrapper -->
            @foreach (var item in Model)
            {
                <div class="blog-card">
                    <div class="blog-card-body">
                        <h6 class="blog-card-title">@item.Name</h6>

                            <p class="blog-card-caption">
                                <a asp-controller="Account" asp-action="profil" asp-route-id="@item.Author"><i class="bi bi-person"></i>@item.Author</a>
                            </p>
                            <a asp-controller="Blog" asp-action="detail" asp-route-id = "@item.slug" class="blog-card-link">Read more <i class="ti-angle-double-right"></i></a>
                    </div>
                </div><!-- end of blog wrapper -->
            }
            
        </div><!-- end of container -->
    </section><!-- end of blog section -->
