@model gsu_math.Models.ForumBaslik
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="DeleteConfirme" id="my-form" asp-route-id="@Model.ForumBaslikId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>@Model.Baslik başlıklı, @Model.creater tarafından yaratılan konuyu silmek istediğinize emin misiniz?</p>
            </div>
            <input type="submit" value="Sil">
        </form>
    </div>
</div>
